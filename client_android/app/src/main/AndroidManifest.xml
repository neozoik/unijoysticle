<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moe.retro.unijoysticle.unijosyticle" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="moe.retro.unijoysticle.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="moe.retro.unijoysticle.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="sensor"
            />
        <activity
            android:name="moe.retro.unijoysticle.HomeActivity"
            android:screenOrientation="sensor"
            />
        <activity
            android:name="moe.retro.unijoysticle.UnijoysticleActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="moe.retro.unijoysticle.GyrussActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="moe.retro.unijoysticle.DpadActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="moe.retro.unijoysticle.CommandoActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>